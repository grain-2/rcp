<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
 <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.mengqingchang.patientims.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="PIMS perspective"
            class="com.mengqingchang.patientims.Perspective"
            id="PatientIMS.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="PatientIMS.application"
            name="Hello RCP">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <!-- 添加视图扩展点-->
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.mengqingchang.patientims.views.NavigatorView"
            icon="icons/navigator.gif"
            id="patientims.views.NaviagtorView"
            name="Navigator">
      </view>
      <view
            class="com.mengqingchang.patientims.views.SearchView"
            icon="icons/search.gif"
            id="patientims.views.SearchView"
            name="Search">
      </view>
      <view
            class="com.mengqingchang.patientims.views.SearchPatienInforView"
            icon="icons/search.gif"
            id="patientims.views.SearchPatientInforView"
            name="病人信息">
      </view>
      <view
            class="com.mengqingchang.patientims.views.SearchPatientExpenseInfoView"
            icon="icons/search.gif"
            id="patientims.views.SearchPatientExpenseInforView"
            name="费用信息">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.mengqingchang.patientims.editors.PatientInforEditor"
            icon="icons/alt_window_16.gif"
            id="PatientIMS.editor1"
            name="病人档案管理">
      </editor>
      <editor
            class="com.mengqingchang.patientims.editors.DiagonseInfoEditor"
            icon="icons/diagnose.gif"
            id="PatientIMS.editor2"
            name="诊断信息管理">
      </editor>
      <editor
            class="com.mengqingchang.patientims.editors.ExpenseInforEditor"
            icon="icons/medicine.gif"
            id="PatientIMS.editor3"
            name="费用信息管理">
      </editor>
   </extension>

   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="PatientIMS.editorContribution1"
            targetID="PatientIMS.editor1">
         <menu
               id="com.mengqingchang.patients.menu1"
               label="&amp;Edit"
               path="file">
            <separator
                  name="separator1">
            </separator>
         </menu>
         <action
               class="com.mengqingchang.patientims.actions.PatientEditorActionDelegate"
               icon="icons/add.gif"
               id="PatientIMS.action1"
               label="AddPatientInfor"
               menubarPath="com.mengqingchang.patients.menu1/separator1"
               style="push"
               toolbarPath="Normal/additions"
               tooltip="添加病人住院信息">
         </action>
      </editorContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.mengqingchang.patientims.preferences.PreferencePage1"
            id="com.mengqingchang.patientims.preferences.PreferencePage"
            name="修改用户密码">
      </page>
   </extension>
 
</plugin>

